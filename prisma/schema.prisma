generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
  MERCHANT
}

enum OrderStatus {
  PENDING
  PROCESSING
  PAID
  FAILED
  CANCELLED
  REFUNDED
  COMPLETED
}

enum PaymentProvider {
  MTN
  PAYSTACK
  STRIPE
  AIRTEL
  ORANGE
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  name          String?
  phone         String?  @unique
  role          UserRole @default(USER)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  products      Product[]
  orders        Order[]
  wallet        Wallet?
  agents        Agent[]
  subscriptions Subscription[]
  customers     Customer[]
  leads         Lead[]
  business      Business?
}

model Product {
  id          String   @id @default(uuid())
  title       String
  description String
  price       Float
  image       String?
  active      Boolean  @default(true)

  sellerId    String
  seller      User     @relation(fields: [sellerId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orders      Order[]
}

model Order {
  id          String       @id @default(uuid())

  userId      String
  user        User         @relation(fields: [userId], references: [id])

  productId   String
  product     Product      @relation(fields: [productId], references: [id])

  total       Float
  status      OrderStatus  @default(PENDING)

  payment     Payment?

  createdAt   DateTime     @default(now())
}

model Payment {
  id            String          @id @default(uuid())
  orderId       String          @unique
  order         Order           @relation(fields: [orderId], references: [id])

  provider      PaymentProvider
  reference     String
  amount        Float

  createdAt     DateTime        @default(now())
}

model Wallet {
  id        String   @id @default(uuid())

  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])

  balance   Float    @default(0)

  createdAt DateTime @default(now())
}

model Agent {
  id        String   @id @default(uuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  name      String
  type      String
  active    Boolean  @default(true)

  createdAt DateTime @default(now())
}

model Subscription {
  id        String   @id @default(uuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  plan      String
  active    Boolean  @default(true)

  createdAt DateTime @default(now())
}

model Customer {
  id          String    @id @default(uuid())
  userId      String    // The merchant/user this customer belongs to
  user        User      @relation(fields: [userId], references: [id])
  name        String
  email       String?
  phone       String?
  totalSpent  Float     @default(0)
  createdAt   DateTime  @default(now())
}

model Lead {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  name      String
  email     String?
  status    String   @default("NEW")
  value     Float?
  createdAt DateTime @default(now())
}

model Business {
  id             String    @id @default(uuid())
  userId         String    @unique
  user           User      @relation(fields: [userId], references: [id])
  name           String
  description    String?
  industry       String?
  logo           String?
  momoNumber     String?
  momoNetwork    String?
  balance        Float     @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}
